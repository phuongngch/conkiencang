<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">
    <virtualType name="GosTradeinGirdFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="GosTradeinTradeinGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Gos\Tradein\Model\ResourceModel\Tradein\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">GosTradeinGirdFilterPool</argument>
        </arguments>
    </virtualType>
    <type name="Gos\Tradein\Model\ResourceModel\Tradein\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">gos_tradein_tradein</argument>
            <argument name="eventPrefix" xsi:type="string">gos_tradein_tradein_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">tradein_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Gos\Tradein\Model\ResourceModel\Tradein</argument>
        </arguments>
    </type>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="gos_tradein_tradein_listing_data_source" xsi:type="string">Gos\Tradein\Model\ResourceModel\Tradein\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
</config>
